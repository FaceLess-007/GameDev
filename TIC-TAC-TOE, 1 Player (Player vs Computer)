#include<iostream>
#include <cstdlib>
#include <ctime>
using namespace std;

char arr[3][3];
int a,pl,n=0,z=0;
int flag=0;

void check(int,int);
void checkcomp(int,int);
int ran();
void player1();
void player2();
void display();
int winner();

void check(int a, int b)
{
    if(arr[a][b]=='X')
    {
        cout<<"Place is Already used By 'X'!\n";
        if(pl==1)
            player1();
        else
            player2();
    }

    if(arr[a][b]=='O')
    {
        cout<<"Place is Already used By 'O'!\n";
        if(pl==1)
            player1();
        else
            player2();
    }

}

void checkcomp(int a,int b)
{
    if(arr[a][b]=='X' || arr[a][b]=='O')
    {
        flag=0;
        player2();
    }
}

void player1()
{
    pl=1;
    display();
    cout<<"\nWhere u want to enter 'X' \n1\t2\t3\n4\t5\t6\n7\t8\t9\nEnter:";
    cin>>a;
    switch(a)
    {
    case 1:
        check(0,0);
        arr[0][0]='X';
        break;
    case 2:
        check(0,1);
        arr[0][1]='X';
        break;
    case 3:
        check(0,2);
        arr[0][2]='X';
        break;
    case 4:
        check(1,0);
        arr[1][0]='X';
        break;
    case 5:
        check(1,1);
        arr[1][1]='X';
        break;
    case 6:
        check(1,2);
        arr[1][2]='X';
        break;
    case 7:
        check(2,0);
        arr[2][0]='X';
        break;
    case 8:
        check(2,1);
        arr[2][1]='X';
        break;
    case 9:
        check(2,2);
        arr[2][2]='X';
        break;
    default:
        cout<<"Please Enter correct input!";
        player1();
        break;
    }
}

int ran()
{
    srand((unsigned) time(0));
    a = rand()%9;
    return a;
}

void player2()
{
    pl=0;
    if(n==0)
    {
        n=1;
        display();
        cout<<"\nBy Computer:";
    }

randoms:
    if(flag==0)
    {
        flag=1;
        a = ran();
        goto putting;
    }
    else
    {
        //Row 0:
        if(arr[0][0]=='X' && arr[0][1]=='X')
        {
            if(arr[0][2]!='X' && arr[0][2]!='O')
            {
                arr[0][2]='O';
                goto ext;
            }

        }

        if(arr[0][1]=='X' && arr[0][2]=='X')
        {
            if(arr[0][0]!='X' && arr[0][0]!='O')
            {
                arr[0][0]='O';
                goto ext;
            }

        }
        if(arr[0][0]=='X' && arr[0][2]=='X')
        {
            if(arr[0][1]!='X' && arr[0][1]!='O')
            {
                arr[0][1]='O';
                goto ext;
            }

        }
        //Row 1:
        if(arr[1][0]=='X' && arr[1][1]=='X')
        {
            if(arr[1][2]!='X' && arr[1][2]!='O')
            {
                arr[1][2]='O';
                goto ext;
            }

        }
        if(arr[1][1]=='X' && arr[1][2]=='X')
        {
            if(arr[1][0]!='X' && arr[1][0]!='O')
            {
                arr[1][0]='O';
                goto ext;
            }

        }
        if(arr[1][0]=='X' && arr[1][2]=='X')
        {
            if(arr[1][1]!='X' && arr[1][1]!='O')
            {
                arr[1][1]='O';
                goto ext;
            }

        }
        //Row 2:
        if(arr[2][0]=='X' && arr[2][1]=='X')
        {
            if(arr[2][2]!='X' && arr[2][2]!='O')
            {
                arr[2][2]='O';
                goto ext;
            }

        }
        if(arr[2][1]=='X' && arr[2][2]=='X')
        {
            if(arr[2][0]!='X' && arr[2][0]!='O')
            {
                arr[2][0]='O';
                goto ext;
            }

        }
        if(arr[2][0]=='X' && arr[2][2]=='X')
        {
            if(arr[2][1]!='X' && arr[2][1]!='O')
            {
                arr[2][1]='O';
                goto ext;
            }

        }
        //Column 0:
        if(arr[0][0]=='X' && arr[1][0]=='X')
        {
            if(arr[2][0]!='X' && arr[2][0]!='O')
            {
                arr[2][0]='O';
                goto ext;
            }

        }

        if(arr[0][0]=='X' && arr[2][0]=='X')
        {
            if(arr[1][0]!='X' && arr[1][0]!='O')
            {
                arr[1][0]='O';
                goto ext;
            }

        }
        if(arr[1][0]=='X' && arr[2][0]=='X')
        {
            if(arr[0][0]!='X' && arr[0][0]!='O')
            {
                arr[0][0]='O';
                goto ext;
            }

        }
        //Column 1:
        if(arr[0][1]=='X' && arr[1][1]=='X')
        {
            if(arr[2][1]!='X' && arr[2][1]!='O')
            {
                arr[2][1]='O';
                goto ext;
            }

        }
        if(arr[0][1]=='X' && arr[2][1]=='X')
        {
            if(arr[1][1]!='X' && arr[1][1]!='O')
            {
                arr[1][1]='O';
                goto ext;
            }

        }
        if(arr[1][1]=='X' && arr[2][1]=='X')
        {
            if(arr[0][1]!='X' && arr[0][1]!='O')
            {
                arr[0][1]='O';
                goto ext;
            }

        }
        //Column 2:
        if(arr[0][2]=='X' && arr[1][2]=='X')
        {
            if(arr[2][2]!='X' && arr[2][2]!='O')
            {
                arr[2][2]='O';
                goto ext;
            }

        }

        if(arr[0][2]=='X' && arr[2][2]=='X')
        {
            if(arr[1][2]!='X' && arr[1][2]!='O')
            {
                arr[1][2]='O';
                goto ext;
            }

        }
        if(arr[1][2]=='X' && arr[2][2]=='X')
        {
            if(arr[0][2]!='X' && arr[0][2]!='O')
            {
                arr[0][2]='O';
                goto ext;
            }

        }
        //Diagonal 1:
        if(arr[0][0]=='X' && arr[1][1]=='X')
        {
            if(arr[2][2]!='X' && arr[2][2]!='O')
            {
                arr[2][2]='O';
                goto ext;
            }

        }

        if(arr[1][1]=='X' && arr[2][2]=='X')
        {
            if(arr[0][0]!='X' && arr[0][0]!='O')
            {
                arr[0][0]='O';
                goto ext;
            }

        }
        if(arr[0][0]=='X' && arr[2][2]=='X')
        {
            if(arr[1][1]!='X' && arr[1][1]!='O')
            {
                arr[1][1]='O';
                goto ext;
            }

        }
        //Diagonal 2:
        if(arr[0][2]=='X' && arr[1][1]=='X')
        {
            if(arr[2][0]!='X' && arr[2][0]!='O')
            {
                arr[2][0]='O';
                goto ext;
            }

        }

        if(arr[1][1]=='X' && arr[2][0]=='X')
        {
            if(arr[0][2]!='X' && arr[0][2]!='O')
            {
                arr[0][2]='O';
                goto ext;
            }
        }
        if(arr[0][2]=='X' && arr[2][0]=='X')
        {
            if(arr[1][1]!='X' && arr[1][1]!='O')
            {
                arr[1][1]='O';
                goto ext;
            }
        }
        //Random:
        flag=0;
        goto randoms;
    }

putting:
    switch(a)
    {
    case 1:
        checkcomp(0,0);
        arr[0][0]='O';
        break;
    case 2:
        checkcomp(0,1);
        arr[0][1]='O';
        break;
    case 3:
        checkcomp(0,2);
        arr[0][2]='O';
        break;
    case 4:
        checkcomp(1,0);
        arr[1][0]='O';
        break;
    case 5:
        checkcomp(1,1);
        arr[1][1]='O';
        break;
    case 6:
        checkcomp(1,2);
        arr[1][2]='O';
        break;
    case 7:
        checkcomp(2,0);
        arr[2][0]='O';
        break;
    case 8:
        checkcomp(2,1);
        arr[2][1]='O';
        break;
    case 9:
        checkcomp(2,2);
        arr[2][2]='O';
        break;
    }
ext:
    cout<<endl;
}

void display()
{
    cout<<"\n******************"<<endl;
    for(int i=0; i<3; i++)
    {
        for(int j=0; j<3; j++)
        {
            cout<<arr[i][j]<<"\t";
        }
        cout<<"*"<<endl;
    }
    cout<<"******************"<<endl;
}

int winner()
{
    if(arr[0][0]=='X' && arr[1][1]=='X' && arr[2][2]=='X')
    {
        cout<<"Player 1 Wins!!!";
        return 1;
    }
    if(arr[0][2]=='X' && arr[1][1]=='X' && arr[2][0]=='X')
    {
        cout<<"Player 1 Wins!!!";
        return 1;
    }
    if(arr[0][1]=='X' && arr[1][1]=='X' && arr[2][1]=='X')
    {
        cout<<"Player 1 Wins!!!";
        return 1;
    }
    if(arr[1][0]=='X' && arr[1][1]=='X' && arr[1][2]=='X')
    {
        cout<<"Player 1 Wins!!!";
        return 1;
    }
    //===================
    if(arr[0][0]=='X' && arr[0][1]=='X' && arr[0][2]=='X')
    {
        cout<<"Player 1 Wins!!!";
        return 1;
    }
    if(arr[0][0]=='X' && arr[1][0]=='X' && arr[2][0]=='X')
    {
        cout<<"Player 1 Wins!!!";
        return 1;
    }
    if(arr[2][0]=='X' && arr[2][1]=='X' && arr[2][2]=='X')
    {
        cout<<"Player 1 Wins!!!";
        return 1;
    }
    if(arr[0][2]=='X' && arr[1][2]=='X' && arr[2][2]=='X')
    {
        cout<<"Player 1 Wins!!!";
        return 1;
    }
    //--------------
    if(arr[0][0]=='O' && arr[1][1]=='O' && arr[2][2]=='O')
    {
        cout<<"Player 2 Wins!!!";
        return 1;
    }
    if(arr[0][2]=='O' && arr[1][1]=='O' && arr[2][0]=='O')
    {
        cout<<"Player 2 Wins!!!";
        return 1;
    }
    if(arr[0][1]=='O' && arr[1][1]=='O' && arr[2][1]=='O')
    {
        cout<<"Player 2 Wins!!!";
        return 1;
    }
    if(arr[1][0]=='O' && arr[1][1]=='O' && arr[1][2]=='O')
    {
        cout<<"Player 2 Wins!!!";
        return 1;
    }
    //===================
    if(arr[0][0]=='O' && arr[0][1]=='O' && arr[0][2]=='O')
    {
        cout<<"Player 2 Wins!!!";
        return 1;
    }
    if(arr[0][0]=='O' && arr[1][0]=='O' && arr[2][0]=='O')
    {
        cout<<"Player 2 Wins!!!";
        return 1;
    }
    if(arr[2][0]=='O' && arr[2][1]=='O' && arr[2][2]=='O')
    {
        cout<<"Player 2 Wins!!!";
        return 1;
    }
    if(arr[0][2]=='O' && arr[1][2]=='O' && arr[2][2]=='O')
    {
        cout<<"Player 2 Wins!!!";
        return 1;
    }

    z++;
    if(z>8)
    {
        cout<<"TIE!!";
        return 1;
    }
    return 0;
}
int main()
{
    cout<<"\tTIC-TAC-TOE\n";
    int i=1,w=0;
    while(w!=1)
    {
        if(i==1)
        {
            player1();
            i=0;
            w=winner();
            if(w==1)
                display();
        }
        else
        {
            player2();
            n=0;
            i=1;
            w=winner();
            if(w==1)
                display();
        }
    }
    return 0;
}
